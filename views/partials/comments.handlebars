<!-- COMMENT PARTIALS -->
<!-- Comments -->
<div class='comments'>
  <!-- use `each` helper to iterate over the comments array -->
  {{#each this}}
    <section class='comment'>
      <div class='meta'>
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class='text'>
        {{comment_text}}
      </div>
    </section>
    <!-- ERROR MESSAGE -->
    <div id='error-message'></div>
  {{/each}}
</div>