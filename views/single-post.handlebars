<!-- PAGE TO VIEW A POSTED ARTICLE IN DETAIL -->
<!-- Partial -->
{{> post-info post}}

<!-- Comment form -->
{{#if loggedIn}}
  <form class='comment-form'>
    <div>
      <textarea name='comment-body'></textarea>
    </div>

    <div>
      <button type='submit'>Add Comment</button>
    </div>
  </form>
{{/if}}

<!-- Comments -->
<div class='comments'>
  <!-- use `each` helper to iterate over the comments array -->
  {{#each post.comments as |comment|}}
    <section class='comment'>
      <div class='meta'>
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class='text'>
        {{comment_text}}
      </div>
    </section>
    <!-- ERROR MESSAGE -->
    <div id='error-message'></div>
  {{/each}}
</div>

<!-- References -->
{{#if loggedIn}}
  <script src='/javascript/comment.js'></script>
{{/if}}