<!-- PAGE TO VIEW A POSTED ARTICLE IN DETAIL -->
<article class='post'>
  <div class='title'>
    <a href='{{post.post_url}}' target='_blank'>{{post.title}}</a>
    <span>({{post.post_url}})</span>
  </div>
  <div class='meta'>
    {{post.vote_count}}
    point(s) by
    {{post.user.username}}
    on
    {{post.created_at}}
    |
    <a href='/post/{{post.id}}'>{{post.comments.length}} comment(s)</a>
  </div>
</article>

<!-- Comment form -->
{{#if loggedIn}}
  <form class='comment-form'>
    <div>
      <textarea name='comment-body'></textarea>
    </div>

    <div>
      <button type='submit'>Add Comment</button>
    </div>
  </form>
{{/if}}

<!-- Comments -->
<div class='comments'>
  <!-- use `each` helper to iterate over the comments array -->
  {{#each post.comments as |comment|}}
    <section class='comment'>
      <div class='meta'>
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class='text'>
        {{comment_text}}
      </div>
    </section>
    <!-- ERROR MESSAGE -->
    <div id='error-message'></div>
  {{/each}}
</div>

<!-- References -->
{{#if loggedIn}}
  <script src='/javascript/comment.js'></script>
{{/if}}